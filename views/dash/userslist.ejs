<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<body class="hold-transition sidebar-mini sidebar-collapse layout-fixed layout-footer-fixed">
  <div class="wrapper">
    <div class="preloader flex-column justify-content-center align-items-center">
      <img class="animation__shake" src="/assets/img/logoies.png" height="60" width="60">
    </div>
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
      </ul>
    </nav>
    <%- include('../partials/sidebar') %>
    <div class="content-wrapper">
      <div class="content-header">
        <div class="container-fluid">
          <%- include('../partials/latestVersion') %>
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0"><%= t("sidebar.userList") %></h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#"><%= t("sidebar.home") %></a></li>
                <li class="breadcrumb-item active"><%= t("sidebar.userList") %></li>
              </ol>
            </div>
          </div>
        </div>
      </div>
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-body">
                  <table id="listadousuarios" class="table table-bordered table-striped">
                    <thead>
                      <tr>
                        <th></th>
                        <th><%= t("userListTable.name") %></th>
                        <th><%= t("userListTable.email") %></th>
                        <th><%= t("userListTable.type") %></th>
                        <th><%= t("userListTable.lastSession") %></th>
                        <th><%= t("userListTable.createdBy") %></th>
                        <th><%= t("userListTable.createdAt") %></th>
                        <th><%= t("userListTable.actions") %></th>
                      </tr>
                    </thead>
                    <tbody>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section>
        <div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel"><%= t("userListTable.userDetails") %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body" id="userModalBody">
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
  <footer class="main-footer">
    <strong>IES De Teis - Alejandro Verde</strong>
    <div class="float-right d-none d-sm-inline-block">
      <b><%= t("update.version") %> <%= version %></b>
    </div>
  </footer>
  <aside class="control-sidebar control-sidebar-dark">
  </aside>
  </div>
  <%- include('../partials/scripts') %>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      $.ajax({
        url: '/auth/list',
        type: 'POST',
        success: function(data) {
          data.forEach(function(user) {
            if (user.type === 'adminUser') {
              user.type = '<%= t("userListTable.admin") %>';
            } else if (user.type === 'normalUser') {
              user.type = '<%= t("userListTable.user") %>';
            }

            var loggedInUserEmail = "<%= loggedInEmail %>";

            var createdDate = new Date(user.createdDate);
            var formattedDate = createdDate.toLocaleString();

            if (user.lastLogin === null) {
              lastLoginFormattedDate = '<%= t("userListTable.never") %>';
            } else {
              var createdDate2 = new Date(user.lastLogin);
              var lastLoginFormattedDate = createdDate2.toLocaleString();
            }

            $('#listadousuarios tbody').append(`
        <tr>
          <td><input type="checkbox" class="user-checkbox"></td>
          <td>${user.fullname}</td>
          <td>${user.email}</td>
          <td>${user.type}</td>
          <td>${lastLoginFormattedDate}</td>
          <td>${user.createdBy}</td>
          <td>${formattedDate}</td>
          <td>
            <a href="#" class="delete-user" data-id="${user.email}" title="<%= t("userListTable.delete") %>" id="deletebutton"><i class="fas fa-trash"></i></a>          </td>
        </tr>
      `);

            if (loggedInUserEmail === user.email) {
              $('.delete-user').last().remove();
            }

            if (user.createdBy === 'SYSTEM') {
              $('.delete-user').last().remove();
              $('.user-checkbox').last().remove();
            }
          });

          var table = $('#listadousuarios').DataTable({
            "responsive": true,
            "lengthChange": false,
            "pageLength": 20,
            "autoWidth": false,
            "buttons": [{
                extend: 'excel',
                text: '<%= t("userListTable.excelButton") %>',
                exportOptions: {
                  columns: [1, 2, 3, 4, 5]
                }
              },
              {
                extend: 'print',
                text: '<%= t("userListTable.printButton") %>',
                exportOptions: {
                  columns: [1, 2, 3, 4, 5]
                }
              },
              {
                text: '<%= t("userListTable.createUser") %>',
                className: 'btn-primary buttons-html5',
                action: function() {
                  openCreateUserForm();

                  function openCreateUserForm() {
                    $('#userModal').modal('show');
                    $('#userModalLabel').text('<%= t("userListTable.createUser") %>');
                    $('#userModalBody').html(
                      '<form id="createUserForm">' +
                      '  <div class="form-group">' +
                      '    <label for="userEmail"><%= t("userListTable.modal.email") %></label>' +
                      '    <input type="email" class="form-control" id="userEmail" placeholder="E-Mail" required>' +
                      '  </div>' +
                      '  <div class="form-group">' +
                      '    <label for="userFullname"><%= t("userListTable.modal.name") %></label>' +
                      '    <input type="text" class="form-control" id="userFullname" placeholder="<%= t("userListTable.modal.name") %>" required>' +
                      '  </div>' +
                      '  <div class="form-group">' +
                      '    <label for="userType"><%= t("userListTable.modal.userType") %></label>' +
                      '    <select class="form-control" id="userType" required>' +
                      '      <option value="normalUser"><%= t("userListTable.modal.user") %></option>' +
                      '      <option value="adminUser"><%= t("userListTable.modal.admin") %></option>' +
                      '    </select>' +
                      '  </div>' +
                      '<br><div class="d-flex justify-content-between">' +
                      '<button type="button" class="btn btn-primary" id="closeModalButton"><%= t("userListTable.modal.cancel") %></button>' +
                      '<button type="submit" class="btn btn-success"><%= t("userListTable.modal.createUser") %></button>' +
                      '</div>' +
                      '</form>'
                    );

                    $('#closeModalButton').on('click', function() {
                      $('#userModal').modal('hide');
                    });

                    $('#createUserForm').submit(function() {
                      event.preventDefault();

                      var userEmail = $('#userEmail').val();
                      var userFullname = $('#userFullname').val();
                      var userType = $('#userType').val();
                      var userCreatedBy = "<%= loggedInUsername %>"

                      $.ajax({
                        url: '/auth/register',
                        type: 'POST',
                        data: {
                          fullname: userFullname,
                          email: userEmail,
                          password: "Cambiame123",
                          type: userType,
                          createdBy: userCreatedBy
                        },
                        success: function(data) {
                          $('#userModal').modal('hide');
                          setTimeout(function() {
                            location.reload(true);
                          }, 1000);
                        },
                        error: function(error) {
                          alert('<%= t("userListTable.modal.error") %>');
                        }
                      });
                    });

                    $('#userModal').modal('show');
                  }
                }
              },
              {
                text: '<%= t("userListTable.deleteSelection") %>',
                className: 'btn-danger buttons-html5',
                action: function() {
                  var selectedUsers = [];

                  $('.user-checkbox:checked').each(function() {
                    selectedUsers.push($(this).closest('tr').find('.delete-user').data('id'));
                  });

                  if (selectedUsers.length > 0) {
                    openRemoveUserForm();
                  } else {
                    $(document).Toasts('create', {
                      class: 'bg-danger',
                      title: 'Ha ocurrido un error',
                      autohide: true,
                      delay: 5000,
                      body: '<%= t("userListTable.noSelected") %>'
                    })
                  }

                  function openRemoveUserForm() {
                    $('#userModal').modal('show');
                    $('#userModalLabel').text('<%= t("userListTable.modal2.title") %>');
                    $('#userModalBody').html(
                      '<form id="removeUserForm">' +
                      '  <p class="text-danger"><%= t("userListTable.modal2.question") %></p>' +
                      '<br><div class="d-flex justify-content-between">' +
                      '<button type="button" class="btn btn-primary" id="closeModalButton"><%= t("userListTable.modal2.cancel") %></button>' +
                      '<button type="submit" class="btn btn-danger"><%= t("userListTable.modal2.delete") %></button>' +
                      '</div>' +
                      '</form>'
                    );

                    $('#closeModalButton').on('click', function() {
                      $('#userModal').modal('hide');
                    });

                    $('#removeUserForm').submit(function() {
                      event.preventDefault();
                      selectedUsers.forEach(function(userEmail) {
                        $.ajax({
                          url: '/auth/unregister',
                          type: 'POST',
                          data: {
                            email: userEmail
                          },
                          success: function(data) {
                            $('#userModal').modal('hide');
                            setTimeout(function() {
                              location.reload(true);
                            }, 1000);
                          },
                          error: function(error) {
                            alert('<%= t("userListTable.modal2.error") %>');
                          }
                        });
                      });
                    });

                    $('#userModal').modal('show');
                  }
                }
              }
            ],
            order: [
              [1, 'asc']
            ],

            language: {
              url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json',
            },
            initComplete: function() {
              setTimeout(function() {
                table.buttons().container().appendTo('#listadousuarios_wrapper .col-md-6');
                $('#listadousuarios_filter').next().remove();
              }, 10);
            }
          })

          $('#listadousuarios tbody').on('click', '.delete-user', function() {
            var userEmail = $(this).data('id');
            openRemoveUserForm(userEmail);

            function openRemoveUserForm(userEmail) {
              $('#userModal').modal('show');
              $('#userModalLabel').text('<%= t("userListTable.modal3.title") %>');
              $('#userModalBody').html(
                '<form id="removeUserForm">' +
                '  <p class="text-danger"><%= t("userListTable.modal3.question") %> ' + userEmail + '?</p>' +
                '<br><div class="d-flex justify-content-between">' +
                '<button type="button" class="btn btn-primary" id="closeModalButton"><%= t("userListTable.modal3.cancel") %></button>' +
                '<button type="submit" class="btn btn-danger"><%= t("userListTable.modal3.delete") %></button>' +
                '</div>' +
                '</form>'
              );

              $('#closeModalButton').on('click', function() {
                $('#userModal').modal('hide');
              });

              $('#removeUserForm').submit(function() {
                event.preventDefault();

                $.ajax({
                  url: '/auth/unregister',
                  type: 'POST',
                  data: {
                    email: userEmail
                  },
                  success: function(data) {
                    $('#userModal').modal('hide');
                    setTimeout(function() {
                      location.reload(true);
                    }, 1000);
                  },
                  error: function(error) {
                    alert('<%= t("userListTable.modal3.error") %>');
                  }
                });
              });

              $('#userModal').modal('show');
            }
          });
        },
        error: function(error) {
          console.error('Error al obtener la lista de usuarios:', error);
        }
      });
    });
  </script>
</body>

</html>