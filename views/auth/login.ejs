<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body class="hold-transition register-page">
  <div class="register-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <p class="h1" style="font-size: xx-large;"><b>LiberTeis</b></p>
      </div>
      <div class="card-body">
        <p class="login-box-msg"><%= t("login.title") %></p>
        <form id="loginForm">
          <div class="input-group mb-3">
            <input type="email" class="form-control" placeholder="<%= t("common.email") %>" name="email" id="email" required>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input type="password" class="form-control" placeholder="<%= t("common.password") %>" name="password" id="password" required>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-5">
              <button type="button" id="loginButton" class="btn btn-primary btn-block"><%= t("login.button") %></button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <%- include('../partials/scripts') %>
    <script>
      $(document).ready(function() {
        $("#email, #password").on("keypress", function(e) {
          if (e.which === 13) {
            $("#loginButton").click();
          }
        });
        $("#loginButton").click(function() {
          var email = $('#email').val();
          var password = $('#password').val();

          $.ajax({
            type: "POST",
            url: "/auth/login",
            data: {
              email: email,
              password: password
            },
            success: function(response) {
              console.log(response);
              $(document).Toasts('create', {
                class: 'bg-success',
                title: '<%= t("login.success.title") %>',
                autohide: true,
                delay: 5000,
                body: '<%= t("login.success.message") %>'
              })
              setTimeout(function() {
                location.href = "/dash";
              }, 1000);
            },
            error: function(error) {
              if (error.status === 400) {
                location.href = "/auth/changepass";
              } else {
                console.error(error);
                $(document).Toasts('create', {
                  class: 'bg-danger',
                  title: '<%= t("login.error.title") %>',
                  autohide: true,
                  delay: 5000,
                  body: '<%= t("login.error.message") %>'
                })

              }
            }
          });
        });
      });
    </script>

</body>

</html>