<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body class="hold-transition register-page">
  <%- include('../partials/authLang') %>
  <div class="register-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <a class="h1" style="font-size: xx-large;"><b>LiberTeis</b></a>
      </div>
      <div class="card-body">
        <p class="login-box-msg" id="login-box-msg"><%= t("register.title") %></p>
        <form id="registerForm">
          <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="<%= t("register.name") %>" name="fullname" id="fullname" required>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-user"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input type="email" class="form-control" placeholder="<%= t("common.email") %>" name="email" id="email" required>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-5">
              <button type="button" class="btn btn-primary btn-block" onclick="registerUser()"><%= t("register.button") %></button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <%- include('../partials/scripts') %>
    <script>
      $("#fullname, #email").on("keypress", function(e) {
        if (e.which === 13) {
          registerUser();
        }
      });

      function validateForm() {
        return true;
      }

      function registerUser() {
        if (!validateForm()) {
          return;
        }

        var fullname = $('#fullname').val();
        var email = $('#email').val();
        var password = $('#password').val();

        $.ajax({
          type: "POST",
          url: "/auth/register",
          data: {
            fullname: fullname,
            email: email,
            password: "Cambiame123",
            type: "adminUser"
          },
          success: function(response) {
            console.log(response);
            $(document).Toasts('create', {
              class: 'bg-success',
              title: '<%= t("register.success.title") %>',
              autohide: true,
              delay: 5000,
              body: '<%= t("register.success.message") %>'
            })
            setTimeout(function() {
              window.location.href = "/auth/login";
            }, 1000);
          },
          error: function(error) {
            console.error(error);
            $(document).Toasts('create', {
              class: 'bg-danger',
              title: '<%= t("register.error.title") %>',
              autohide: true,
              delay: 5000,
              body: '<%= t("register.error.message") %>'
            })
          }
        });
      }
    </script>
</body>

</html>