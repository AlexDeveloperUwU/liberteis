<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body class="hold-transition register-page">
  <div class="register-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <a class="h1" style="font-size: xx-large;"><b>LiberTeis</b></a>
      </div>
      <div class="card-body">
        <p class="login-box-msg"><%= t("changePass.title") %></p>
        <form id="changePassForm">
          <div class="input-group mb-3">
            <input type="email" class="form-control" placeholder="<%= t("common.email") %>" name="email" id="email" required>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input type="password" class="form-control" placeholder="<%= t("common.password") %>" name="password" id="password" required>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input type="password" class="form-control" placeholder="<%= t("changePass.retypePassword") %>" name="confirmPassword" id="confirmPassword" required>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-7">
              <button type="button" class="btn btn-primary btn-block" onclick="changePassUser()"><%= t("changePass.button") %></button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <%- include('../partials/scripts') %>
    <script>
      $("#email, #password, #confirmPassword").on("keypress", function(e) {
        if (e.which === 13) {
          changePassUser();
        }
      });

      function validateForm() {
        var password = document.getElementById("password").value;
        var confirmPassword = document.getElementById("confirmPassword").value;
        if (password !== confirmPassword) {
          $(document).Toasts('create', {
            class: 'bg-danger',
            title: '<%= t("changePass.error.title") %>',
            autohide: true,
            delay: 5000,
            body: '<%= t("changePass.error.passwordsDontMatch") %>'
          })
          return false;
        }
        return true;
      }

      function changePassUser() {
        if (!validateForm()) {
          return;
        }

        var email = $('#email').val();
        var password = $('#password').val();

        $.ajax({
          type: "POST",
          url: "/auth/changepass",
          data: {
            email: email,
            password: password,
          },
          success: function(response) {
            setTimeout(function() {
              window.location.href = "/auth/login";
            }, 1000);
          },
          error: function(error) {
            console.error(error);
            $(document).Toasts('create', {
              class: 'bg-danger',
              title: '<%= t("changePass.error.title") %>',
              autohide: true,
              delay: 5000,
              body: '<%= t("changePass.error.message") %>'
            })
          }
        });
      }
    </script>
</body>

</html>